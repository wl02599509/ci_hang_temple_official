<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">會員列表</h1>
  </div>

  <%= render "search_form" %>

  <% unless @users.empty? %>
    <div class="mb-4">
      <%= link_to export_admin_users_path(q: params[:q], format: :xlsx), class: "inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-md shadow-sm transition-colors duration-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <%= t('.export_excel') %>
      <% end %>
    </div>
  <% end %>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <% display_order_columns.each do |column| %>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <% if [:status, :sex, :zodiac].include?(column) %>
                  <%= sort_link(@q, column, User.human_attribute_name(column), default_order: :asc) %>
                <% else %>
                  <%= User.human_attribute_name(column) %>
                <% end %>
              </th>
            <% end %>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @users.each do |user| %>
            <tr class="hover:bg-gray-50">
              <% display_order_columns.each do |column| %>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= respond_to?("display_#{column}") ? public_send("display_#{column}", user) : user.send(column) %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if @users.empty? %>
      <div class="text-center py-12">
        <p class="text-gray-500 text-lg"><%= t('.no_users') %></p>
      </div>
    <% end %>
  </div>

  <% if @pagy.pages > 1 %>
    <div class="mt-6 flex justify-center">
      <%== @pagy.series_nav %>
    </div>
  <% end %>
</div>
