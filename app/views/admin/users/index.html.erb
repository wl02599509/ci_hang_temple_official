<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">會員列表</h1>
  </div>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <% display_order_columns.each do |column| %>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <%= User.human_attribute_name(column) %>
              </th>
            <% end %>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @users.each do |user| %>
            <tr class="hover:bg-gray-50">
              <% display_order_columns.each do |column| %>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= respond_to?("display_#{column}") ? public_send("display_#{column}", user) : user.send(column) %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if @users.empty? %>
      <div class="text-center py-12">
        <p class="text-gray-500 text-lg"><%= t('.no_users') %></p>
      </div>
    <% end %>
  </div>

  <% if @pagy.pages > 1 %>
    <div class="mt-6 flex justify-center">
      <%== @pagy.series_nav %>
    </div>
  <% end %>
</div>
