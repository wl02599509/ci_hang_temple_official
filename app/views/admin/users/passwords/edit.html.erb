<div class="login-container">
  <div class="login-card">
    <div class="login-header">
      <h2><%= t('.title') %></h2>
      <p><%= Settings.temple_name + t('.subtitle') %></p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "login-form" }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, t('.new_password') %>
        <% if @minimum_password_length %>
          <span class="text-sm text-gray-500"><%= t('.password_hint', count: @minimum_password_length) %></span>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control #{form_error_class(resource, :password)}", placeholder: t('helpers.placeholder.user.password') %>
        <%= display_field_errors(resource, :password) %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, t('.confirm_new_password') %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control #{form_error_class(resource, :password_confirmation)}", placeholder: t('helpers.placeholder.user.password_confirmation') %>
        <%= display_field_errors(resource, :password_confirmation) %>
      </div>

      <div class="form-actions">
        <%= f.submit t('.change_password'), class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div class="login-footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
