<div class="sticky top-0 z-10 flex h-16 flex-shrink-0 bg-white shadow">
  <div class="flex flex-1 justify-end px-4 sm:px-6 lg:px-8">
    <div class="ml-4 flex items-center gap-4">
      <% if current_admin_user %>
        <div>
          <%= current_admin_user.name %>
        </div>
        <div>
            <button type="button" class="flex max-w-xs items-center rounded-full bg-white text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" id="user-menu-button">
              <%= button_to "登出", destroy_admin_user_session_path, method: :delete, class: "text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
            </button>
        </div>
      <% else %>
        <div>
          <%= link_to "登入", new_admin_user_session_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>