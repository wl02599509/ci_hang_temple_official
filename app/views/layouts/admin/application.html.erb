<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "後台管理系統" %> - <%= Settings.temple_name %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Load admin styles %>
    <%= stylesheet_link_tag "admin", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body>
    <div class="admin-container">
      <header class="admin-header">
        <div class="header-content">
          <h1><%= Settings.temple_name + '後台管理系統' %></h1>
          <div class="user-info">
            <% if user_signed_in? %>
              <span class="user-name">
                <%= t('.greeting_user', name: current_user.name, status: display_status(current_user)) %>
              </span>
              <%= button_to "登出", destroy_user_session_path, method: :delete, class: "btn-logout", data: { turbo: false } %>
            <% else %>
              <%= link_to "登入", new_user_session_path, class: "btn-login" %>
            <% end %>
          </div>
        </div>
      </header>

      <div class="admin-main">
        <% if user_signed_in? %>
          <aside class="admin-sidebar">
            <nav class="sidebar-nav">
              <ul>
                <% ADMIN_SIDEBAR.each do |item| %>
                  <li class="<%= 'active' if item['controller_name'] && controller_name == item['controller_name'] %>">
                    <%= link_to item['path'] do %>
                      <span class="nav-icon"><%= item['icon'] %></span>
                      <span><%= item['title'] %></span>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </nav>
          </aside>
        <% end %>

        <main class="admin-content">
          <%= render FlashComponent.new(flash: flash) %>

          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>
